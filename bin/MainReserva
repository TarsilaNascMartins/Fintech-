
import GastoDAO;
import br.com.fiap.mercado.view.TestedeConexao;

public class MainReserva {

    public static void main(String[] args) {
        // Certifique-se de que sua configuração de banco de dados está correta
        TestedeConexao.inicializar();

        // Crie uma instância de GastoDAO
        GastoDAO gastoDAO = new GastoDAO();

        // Cadastrar um novo gasto
        Gasto novoGasto = new Gasto(1, "Contas", 1, 1, "CONTA DE LUZ", "MÊS DE OUTUBRO", 100.00, java.sql.Date.valueOf("2023-10-16"), 1);
        gastoDAO.cadastrar(novoGasto);

        // Atualizar um gasto existente (descomente se necessário)
        /*
        Gasto gastoAtualizado = new Gasto(1, "Nova Despesa", 2, 2, "Nova Conta", "Nova Descrição", 99.99, java.sql.Date.valueOf("2023-10-17"), 2);
        gastoDAO.atualizar(gastoAtualizado);
        */

        // Remover um gasto por código (descomente se necessário)
        /*
        gastoDAO.remover(1);
        */

        // Listar todos os gastos
        System.out.println("Lista de Gastos:");
        for (Gasto gasto : gastoDAO.listar()) {
            System.out.println(gasto);
        }

        // Buscar um gasto por código (descomente se necessário)
        /*
        Gasto gastoBuscado = gastoDAO.buscarPorCodigo(2);
        System.out.println("Gasto encontrado: " + gastoBuscado);
        */

        // Encerrar a conexão com o banco de dados
       TestedeConexao.encerrar();
    }
}
